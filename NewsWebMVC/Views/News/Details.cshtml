@model News
@{
    ViewData["title"] = Model.title;
    string image = NewsController.ImagesPath + "/"+ Model.ImagePath;
}
<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="@image" class="img-fluid" alt="News Image">
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.title</h3>
            <h4>Author : @Model.Author.Name</h4>

        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar"></i>
            Published On : @Model.PublicationDate<br />
            <i class="bi bi-calendar"></i>
            Created On : @Model.CreationDate
        </span>
        <p class="text-justify mt-3">@Model.TheNews</p>
        <div>
            <a class="btn btn-outline-primary" asp-action="Index"> <i class="bi bi-arrow-return-left"></i>  Back</a>
        </div>
    </div>

</div>