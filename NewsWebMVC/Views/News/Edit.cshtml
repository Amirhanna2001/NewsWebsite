@model EditNewsViewModel
@{
    ViewData["Title"] = "Edit News";
}
<section class="row justify-content-between">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            
            <div class="form-group">
                <input type="hidden" asp-for="ImagePath" />
                <label asp-for="title"></label>
                <input asp-for="title" maxlength="250" type="text" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId"></label>
                <select class="form-control" asp-for="AuthorId"
                        asp-items="@(new SelectList(Model.Authors,"Id","Name"))">
                    <option></option>
                </select>

                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate"></label>
                <input asp-for="PublicationDate" type="date" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheNews"></label>
                <textarea asp-for="TheNews" class="form-control" maxlength="2500" rows="5">

                 </textarea>
                <span asp-validation-for="TheNews" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" asp-for="Image" />
                <label class="custom-file-label" asp-for="Image"></label>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2"></i> Save
                </button>
                <a asp-action="index" class="btn btn-primary">
                    <i class="bi bi-x-circle-fill"></i> Cancel
                </a>
            </div>

        </form>
    </div>
    <div class="col-md-4">
        <div id="poster-container" ">
        @*<img src="@" alt="Poster" class="img-thumbnail" />*@
        </div>
    </div>
</section>